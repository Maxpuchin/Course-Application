        .header {
            grid-area: header;
            background-color: ghostwhite;
            padding: 30px;
            text-align: center;
            font-size: 35px;
            background-size: 150%;
        }

        .container {
            height: 100%;
            padding: 2px 16px;
        }

        .grid-container {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            display: grid;
            height: 100%;
            background-color: ghostwhite;
            grid-template-areas: 'header header header header header header' 'left left middle middle right right' 'footer footer footer footer footer footer';
        }

        .left,
        .middle,
        .right {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            margin: 10px;
            padding: 10px;
            height: 300px;
        }



        .left {
            background-size: 150%;
            grid-area: left;
        }

        .middle {
            background-size: 150%;
            grid-area: middle;
        }

        .right {
            grid-area: right;
            background-size: 150%;
        }

        .footer {
            grid-area: footer;
            height: 100%;
            background-color: ghostwhite;
            padding: 10px;
            text-align: center;
        }

        input[type=text], select {
            width: 100%;
            padding: 6px 10px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 15px;
            box-sizing: border-box;
        }

        input[type=submit] {
